<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursarbeit.controllers.TasksController">

    <!-- Кнопка для добавления задачи -->
    <Button text="Добавить задачу" onAction="#addTask"/>

    <!-- Фильтры для поиска задач -->
    <HBox spacing="10">
        <TextField fx:id="filterField" promptText="Поиск задач"/>
        <ComboBox fx:id="filterPriority" promptText="Приоритет" />
        <ComboBox fx:id="filterCategory" promptText="Категория" />
        <DatePicker fx:id="filterDate" promptText="Дата окончания" />
    </HBox>

    <!-- Формы для ввода данных о задаче -->
    <GridPane>
        <Label text="Заголовок"/>
        <TextField fx:id="taskTitleField" GridPane.rowIndex="1" />

        <Label text="Описание"/>
        <TextField fx:id="taskDescriptionField" GridPane.rowIndex="2" />

        <Label text="Категория"/>
        <ComboBox fx:id="taskCategoryField" GridPane.rowIndex="3" />

        <Label text="Дата начала"/>
        <DatePicker fx:id="taskStartDateField" GridPane.rowIndex="4" />

        <Label text="Дата окончания"/>
        <DatePicker fx:id="taskDueDateField" GridPane.rowIndex="5" />

        <Label text="Приоритет"/>
        <ComboBox fx:id="taskPriorityField" GridPane.rowIndex="6" />
    </GridPane>

    <!-- Кнопки для управления задачами -->
    <HBox spacing="10">
        <Button fx:id="addTaskButton" text="Добавить задачу" onAction="#addTask"/>
        <Button fx:id="deleteTaskButton" text="Удалить задачу" onAction="#deleteTask"/>
        <Button fx:id="updateTaskButton" text="Обновить задачу" onAction="#updateTask"/>
    </HBox>

    <!-- Таблица задач -->
    <TableView fx:id="tasksTable">
        <columns>
            <TableColumn fx:id="titleColumn" text="Заголовок"/>
            <TableColumn fx:id="descriptionColumn" text="Описание"/>
            <TableColumn fx:id="categoryColumn" text="Категория"/>
            <TableColumn fx:id="startDateColumn" text="Дата начала"/>
            <TableColumn fx:id="dueDateColumn" text="Дата окончания"/>
            <TableColumn fx:id="priorityColumn" text="Приоритет"/>
            <TableColumn fx:id="statusColumn" text="Статус"/>
        </columns>
    </TableView>

</VBox>
