<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursarbeit.controllers.NotesController">
    <ListView fx:id="notesListView" prefHeight="200" onMouseClicked="#handleNoteSelection"/>
    <TextArea fx:id="noteTextArea" promptText="Введите текст заметки..." prefHeight="100"/>
    <HBox spacing="10">
        <Button text="Добавить" onAction="#handleAddNote"/>
        <Button text="Редактировать" onAction="#handleEditNote"/>
        <Button text="Удалить" onAction="#handleDeleteNote"/>
    </HBox>
</VBox>
