<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursarbeit.controllers.TasksController">
    <TextField fx:id="filterField" promptText="Фильтровать задачи"/>
    <ListView fx:id="taskListView" />

    <!-- Table for displaying tasks -->
    <TableView fx:id="tasksTable">
        <columns>
            <TableColumn fx:id="titleColumn" text="Задача" />
            <TableColumn fx:id="descriptionColumn" text="Описание" />
            <TableColumn fx:id="dueDateColumn" text="Дата" />
            <TableColumn fx:id="priorityColumn" text="Приоритет" />
        </columns>
    </TableView>

    <!-- Fields for adding new tasks -->
    <TextField fx:id="taskTitleField" promptText="Название задачи"/>
    <TextField fx:id="taskDescriptionField" promptText="Описание задачи"/>
    <TextField fx:id="taskDueDateField" promptText="Дата (dd.MM.yyyy)"/>
    <TextField fx:id="taskPriorityField" promptText="Приоритет"/>
    <Button fx:id="addTaskButton" text="Добавить задачу"/>
</VBox>
