<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterController" spacing="10" alignment="CENTER">
    <Label text="Регистрация" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="nameField" promptText="Имя" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="phoneField" promptText="Телефон" />
    <PasswordField fx:id="passwordField" promptText="Пароль" />
    <Button text="Зарегистрироваться" onAction="#registerUser" />
</VBox>
